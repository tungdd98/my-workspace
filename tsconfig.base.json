{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@apps/default/*": ["apps/default/src/*"],
      "@my-workspace/icons": ["icons/src/index.ts"],
      "@my-workspace/icons/server": ["icons/src/server.ts"],
      "@my-workspace/theme": ["theme/src/index.ts"],
      "@my-workspace/ui-shared": ["ui-shared/src/index.ts"],
      "@my-workspace/ui-shared/server": ["ui-shared/src/server.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
